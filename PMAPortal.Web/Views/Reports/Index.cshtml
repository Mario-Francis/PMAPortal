@inject ISessionService service;
@inject IDropdownService dropdownService;
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Application Reports";
}


<h2 class="mt-4">Application Reports</h2>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><i class="fa fa-home"></i></li>
    <li class="breadcrumb-item active">Reports</li>
</ol>

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <div>
                    <form>
                        <fieldset>
                            <legend class="f16">Filters</legend>
                            <hr class="mt-0 mb-2 ml-0 w-50" />
                            <div class="row">
                                <div class="col-sm-6 col-md-4 col-lg-3">
                                    <div class="form-group">
                                        <label for="meter" class="f14">Meter Type</label>
                                        <select id="meter" class="form-control custom-select-sm" asp-items="@(dropdownService.GetMeters(emptyText:"All"))"></select>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-4 col-lg-3">
                                    <div class="form-group">
                                        <label for="area" class="f14">Area</label>
                                        <select id="area" class="form-control custom-select-sm" asp-items="@(dropdownService.GetAreas(emptyText:"All"))"></select>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-4 col-lg-3">
                                    <div class="form-group">
                                        <label for="status" class="f14">Status</label>
                                        <select id="status" class="form-control custom-select-sm" asp-items="@(dropdownService.GetApplicationStatuses(emptyText:"All"))"></select>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-4 col-lg-3">
                                    <div class="form-group">
                                        <label for="installer" class="f14">Installer</label>
                                        <select id="installer" class="form-control custom-select-sm chosen-select" asp-items="@(dropdownService.GetInstallers(emptyText:"All"))"></select>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-4 col-lg-3">
                                    <div class="form-group">
                                        <label for="from" class="f14">From Date</label>
                                        <input type="text" id="from" class="form-control form-control-sm date" placeholder="YYYY-MM-DD" />
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-4 col-lg-3">
                                    <div class="form-group">
                                        <label for="to" class="f14">To Date</label>
                                        <input type="text" id="to" class="form-control form-control-sm date" placeholder="YYYY-MM-DD" />
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-4 col-lg-3">
                                    <div class="form-group">
                                        <label for="to" class="f14">&nbsp;</label>
                                        <button type="button" id="filterBtn" class="btn btn-primary btn-sm d-block px-3"><i class="fa fa-filter"></i> Filter</button>
                                    </div>

                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
                @*<hr class="my-2" />*@
                <div class="mt-2">
                    <h6 class="f16">Report Summary</h6>
                    <hr class="mt-0 mb-2 ml-0 w-50" />
                    <div class="row f14">
                        <div class="col-md-4">
                            <div class="d-flex">
                                <div style="min-width:130px" class="mini-bold">Total Meter Count: </div>
                                <div class="flex-fill text-right"><span id="totalMeterCount">0</span></div>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-sm" id="meterCountsTable">
                                </table>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex">
                                <div style="min-width:130px" class="mini-bold">Total Amount: </div>
                                <div class="flex-fill text-right"><span id="totalAmount">N0.00</span></div>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-sm" id="meterAmountsTable">
                                </table>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex">
                                <div style="min-width:130px" class="mini-bold">Area Count: </div>
                                <div class="flex-fill text-right"><span id="areaCount">0</span></div>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-sm" id="areasTable">
                                </table>
                            </div>
                        </div>
                    </div>
                    <p class="">
                        <button type="button" id="exportBtn" class="btn btn-sm btn-primary"><i class="fa fa-file-excel"></i> Export to Excel</button>
                    </p>
                    <div class="table-responsive mt-2">
                        <table id="reportsTable" class="table table-striped table-bordered f14">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>&nbsp;</th>
                                    <th>Applicant</th>
                                    <th>Area</th>
                                    <th>Phone&nbsp;Number</th>
                                    <th>Meter</th>
                                    <th>Tracking&nbsp;Number</th>
                                    <th>Amount&nbsp;Paid</th>
                                    <th>Status</th>
                                    <th>Assigned&nbsp;To</th>
                                    <th>Date&nbsp;Created</th>
                                    <th>Date&nbsp;Created</th>
                                    <th>Updated&nbsp;By</th>
                                    <th>Date&nbsp;Updated</th>
                                    <th>Date&nbsp;Updated</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section css{
    <link href="~/lib/datatables.net-bs4/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/lib/chosen/chosen.min.css" rel="stylesheet" />
}

@section js{
    <script src="~/lib/datatables.net/jquery.dataTables.js"></script>
    <script src="~/lib/datatables.net-bs4/js/dataTables.bootstrap4.js"></script>
    <script src="~/lib/chosen/chosen.jquery.min.js"></script>
    <script>

    </script>
    <script src="~/js/reports.js" asp-append-version="true"></script>

}
