@inject ISessionService service;
@inject IDropdownService dropdownService;
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Applications";
}


<h2 class="mt-4">Applications</h2>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><i class="fa fa-home"></i></li>
    <li class="breadcrumb-item active">Applications</li>
</ol>

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link text-black-50 active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Pending</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link text-black-50" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Failed Confirmation</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link text-black-50" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Completed</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active p-2 p-md-3" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <div class="table-responsive">
                            <table id="pendingTable" class="table table-striped table-bordered f14">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>&nbsp;</th>
                                        <th>Applicant</th>
                                        <th>Area</th>
                                        <th>Phone&nbsp;Number</th>
                                        <th>Meter</th>
                                        <th>Tracking&nbsp;Number</th>
                                        <th>Amount&nbsp;Paid</th>
                                        <th>Status</th>
                                        <th>Date&nbsp;Created</th>
                                        <th>Date&nbsp;Created</th>
                                        <th>Updated&nbsp;By</th>
                                        <th>Date&nbsp;Updated</th>
                                        <th>Date&nbsp;Updated</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="tab-pane fade p-2 p-md-3" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                        <div class="table-responsive">
                            <table id="failedConfirmationTable" class="table table-striped table-bordered f14">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>&nbsp;</th>
                                        <th>Applicant</th>
                                        <th>Area</th>
                                        <th>Phone&nbsp;Number</th>
                                        <th>Meter</th>
                                        <th>Tracking&nbsp;Number</th>
                                        <th>Amount&nbsp;Paid</th>
                                        <th>Status</th>
                                        <th>Date&nbsp;Created</th>
                                        <th>Date&nbsp;Created</th>
                                        <th>Updated&nbsp;By</th>
                                        <th>Date&nbsp;Updated</th>
                                        <th>Date&nbsp;Updated</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="tab-pane fade p-2 p-md-3" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                        <div class="table-responsive">
                            <table id="completedTable" class="table table-striped table-bordered f14">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>&nbsp;</th>
                                        <th>Applicant</th>
                                        <th>Area</th>
                                        <th>Phone&nbsp;Number</th>
                                        <th>Meter</th>
                                        <th>Tracking&nbsp;Number</th>
                                        <th>Amount&nbsp;Paid</th>
                                        <th>Status</th>
                                        <th>Date&nbsp;Created</th>
                                        <th>Date&nbsp;Created</th>
                                        <th>Updated&nbsp;By</th>
                                        <th>Date&nbsp;Updated</th>
                                        <th>Date&nbsp;Updated</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                   
                </div>

            </div>
        </div>
    </div>
</div>

@section css{
    <link href="~/lib/datatables.net-bs4/css/dataTables.bootstrap4.css" rel="stylesheet" />
}

@section js{
    <script src="~/lib/datatables.net/jquery.dataTables.js"></script>
    <script src="~/lib/datatables.net-bs4/js/dataTables.bootstrap4.js"></script>
    <script>

    </script>
    <script src="~/js/disco_applications.js" asp-append-version="true"></script>

}