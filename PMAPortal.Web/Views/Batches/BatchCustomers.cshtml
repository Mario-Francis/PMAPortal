@model BatchVM;
@inject ISessionService service;
@inject IDropdownService dropdownService;
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Customers";
}


<h2 class="mt-4">Batch #@(Model.Id.ToString().PadLeft(6, '0'))</h2>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><i class="fa fa-home"></i></li>
    <li class="breadcrumb-item"><a asp-controller="Batches" asp-action="Index" class="text-dark">Batches</a></li>
    <li class="breadcrumb-item active">#@(Model.Id.ToString().PadLeft(6, '0'))</li>
</ol>

<div class="row">
    <div class="col-sm-12">
        <input type="hidden" id="batchId" value="@Model.Id" />
        <div class="card">
            <div class="card-body">
                @*<div class="text-right mb-3">
                        <button type="button" id="addBtn" class="btn btn-primary btn-sm  px-3"><i class="fa fa-plus"></i>&nbsp; Upload Batch</button>
                    </div>*@
                <div class="table-responsive">
                    <table id="customersTable" class="table table-striped table-bordered f14">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>&nbsp;</th>
                                <th>Batch</th>
                                <th>Account&nbsp;Number</th>
                                <th>ARN</th>
                                <th>Customer&nbsp;Name</th>
                                <th>CIS&nbsp;Name</th>
                                <th>Email</th>
                                <th>Phone&nbsp;Number</th>
                                <th>Survey&nbsp;Status</th>
                                <th>Installation&nbsp;Status</th>
                                <th>Date&nbsp;Shared</th>
                                <th>Date&nbsp;Shared</th>
                                <th>Created&nbsp;By</th>
                                <th>Date&nbsp;Created</th>
                                <th>Date&nbsp;Created</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Details Modal -->
<div class="modal fade" id="detailsModal">
    <div class="modal-dialog modal-lg modal-dialog-scrollable modal-dialog-centered">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title"><span id="cname_sp">Customer Name</span>'s Details </h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>


            <!-- Modal body -->
            <div class="modal-body">
                <div class="row mt-2 f14">
                    <div class="col-md-6">
                        <div class="row">
                            <p class="mini-bold col-5">Batch Number:</p>
                            <p class="col-7" id="batchno_p">099</p>
                        </div>
                        <div class="row my-1">
                            <p class="mini-bold col-5">Account Number:</p>
                            <p class="col-7" id="accno_p">099</p>
                        </div>
                        <div class="row my-1">
                            <p class="mini-bold col-5">ARN:</p>
                            <p class="col-7" id="arn_p">099</p>
                        </div>
                        <div class="row my-1">
                            <p class="mini-bold col-5">Customer Name:</p>
                            <p class="col-7" id="cusname_p">099</p>
                        </div>
                        <div class="row my-1">
                            <p class="mini-bold col-5">CIS Name:</p>
                            <p class="col-7" id="cisname_p">099</p>
                        </div>
                        <div class="row my-1">
                            <p class="mini-bold col-5">Email:</p>
                            <p class="col-7" id="email_p">099</p>
                        </div>
                        <div class="row my-1">
                            <p class="mini-bold col-5">Phone Number:</p>
                            <p class="col-7" id="phone_p">099</p>
                        </div>
                        <div class="row my-1">
                            <p class="mini-bold col-5">Address:</p>
                            <p class="col-7" id="adres_p">099</p>
                        </div>
                        <div class="row my-1">
                            <p class="mini-bold col-5">CIS Address:</p>
                            <p class="col-7" id="cisadres_p">099</p>
                        </div>
                        <div class="row my-1">
                            <p class="mini-bold col-5">Ladmark:</p>
                            <p class="col-7" id="landmark_p">099</p>
                        </div>
                        <div class="row my-1">
                            <p class="mini-bold col-5">Business Unit (BU):</p>
                            <p class="col-7" id="bu_p">099</p>
                        </div>
                        <div class="row my-1">
                            <p class="mini-bold col-5">Under Taken (UT):</p>
                            <p class="col-7" id="ut_p">099</p>
                        </div>
                    </div>
                    <div class="col-md-6">

                        <div class="row my-1">
                            <p class="mini-bold col-5">Feeder:</p>
                            <p class="col-7" id="feeder_p">099</p>
                        </div>
                        <div class="row my-1">
                            <p class="mini-bold col-5">Distribution Transformer (DT):</p>
                            <p class="col-7" id="dt_p">099</p>
                        </div>
                        <div class="row my-1">
                            <p class="mini-bold col-5">Tariff:</p>
                            <p class="col-7" id="tariff_p">099</p>
                        </div>
                        <div class="row my-1">
                            <p class="mini-bold col-5">Metered Status:</p>
                            <p class="col-7" id="metered_status_p">099</p>
                        </div>
                        <div class="row my-1">
                            <p class="mini-bold col-5">Survey Status:</p>
                            <p class="col-7" id="survey_status_p">099</p>
                        </div>
                        <div class="row my-1">
                            <p class="mini-bold col-5">Installation Status:</p>
                            <p class="col-7" id="installation_status_p">099</p>
                        </div>
                        <div class="row my-1">
                            <p class="mini-bold col-5">Date Shared:</p>
                            <p class="col-7" id="date_shared_p">099</p>
                        </div>
                        <div class="row my-1">
                            <p class="mini-bold col-5">Created By:</p>
                            <p class="col-7" id="created_by_p">099</p>
                        </div>
                        <div class="row my-1">
                            <p class="mini-bold col-5">Date Created:</p>
                            <p class="col-7" id="date_created_p">099</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-sm px-4 py-2 f12" data-dismiss="modal"><i class="fa fa-check-circle"></i> &nbsp;Okay</button>
                @*<button type="submit" id="uploadBtn" class="btn btn-primary btn-sm px-4 py-2 f12"><i class="fa fa-upload"></i> &nbsp;Upload</button>*@
            </div>

        </div>
    </div>
</div>





@section css{
    <link href="~/lib/datatables.net-bs4/css/dataTables.bootstrap4.css" rel="stylesheet" />
}

@section js{
    <script src="~/lib/datatables.net/jquery.dataTables.js"></script>
    <script src="~/lib/datatables.net-bs4/js/dataTables.bootstrap4.js"></script>
    <script>

    </script>
    <script src="~/js/batch_customers.js" asp-append-version="true"></script>

}